<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF7F7FF"
    tools:context=".OrderActivity">

    <!-- Illustration -->
    <ImageView
        android:id="@+id/ivIllustration"
        android:layout_width="311dp"
        android:layout_height="303dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:contentDescription="Illustration"
        android:src="@drawable/order" />

    <!-- Message -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivIllustration"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="After placing your first order, regular status updates will be listed here."
        android:textColor="#000000"
        android:textSize="16sp"
        android:gravity="center"
        android:fontFamily="sans-serif"/>

    <!-- Start Shopping Button -->
    <Button
        android:id="@+id/btnStartShopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="START SHOPPING"
        android:textColor="#FFFFFF"
        android:background="@drawable/circular_border"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-medium"/>
</RelativeLayout>
